<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php"
         backupGlobals="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         verbose="true">

  <testsuites>

        <testsuite name="Phifty">
            <directory suffix="Test.php">tests/Phifty</directory>
            <exclude>_old</exclude>
        </testsuite>

        <testsuite name="ActionKit">
            <directory suffix="Test.php">tests/ActionKit</directory>
        </testsuite>

        <testsuite name="I18N">
            <directory suffix="Test.php">tests/I18N</directory>
        </testsuite>

        <!--
        <testsuite name="Functional">
            <directory suffix="Test.php">tests/functional</directory>
        </testsuite>
        -->
  </testsuites>

  <logging>
    <log type="coverage-html" target="build/coverage" title="Phifty"
        charset="UTF-8" yui="true" highlight="true"
        lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="build/logs/clover.xml"/>
    <log type="junit" target="build/logs/junit.xml"
        logIncompleteSkipped="false"/>
  </logging>
</phpunit>
